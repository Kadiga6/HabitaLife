    .info-item:last-child {
        margin-bottom: 0;
    }

    .info-item strong {
        color: #667eea;
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .info-item a {
        color: #667eea;
        text-decoration: none;
        font-weight: 500;
    }

    .info-item a:hover {
        text-decoration: underline;
    }

    /* Container */
    .container-lg {
        max-width: 1200px;
    }

    /* Delays for staggered animation */
    .delay-1 { animation-delay: 0.1s; }
    .delay-2 { animation-delay: 0.2s; }
    .delay-3 { animation-delay: 0.3s; }
</style>

