    }

    .action-btn.danger {
        background: linear-gradient(135deg, #dc3545 0%, #fd7e14 100%);
        color: white;
    }

    .action-btn.info {
        background: linear-gradient(135deg, #17a2b8 0%, #0dcaf0 100%);
        color: white;
    }

    .action-btn.warning {
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        color: white;
    }

    /* Incidents list */
    .incident-item {
        padding: 1.2rem 0;
        border-bottom: 1px solid #f0f3f7;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        transition: all 0.3s ease;
    }

    .incident-item:last-child {
        border-bottom: none;
    }

    .incident-item:hover {
        background: #f9f9f9;
        padding: 1.2rem;
        margin: 0 -1.2rem;
        border-radius: 8px;
    }

    .incident-title {
        font-weight: 600;
        color: #333;
        margin-bottom: 0.3rem;
    }

    .incident-date {
        font-size: 0.85rem;
        color: #999;
    }

    /* Progress bars */
    .progress-stat {
        margin-bottom: 2rem;
    }

    .progress-stat h6 {
        color: #666;
        font-weight: 600;
        margin-bottom: 0.8rem;
        font-size: 0.95rem;
    }

    .progress-stat-row {
