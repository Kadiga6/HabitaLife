{% extends 'base.html.twig' %}
{% block title %}Mon Profil - HabitaGo{% endblock %}
{% block body %}
<div class="container my-5">
    {# En-tête #}
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center gap-4 mb-4">
                <div class="avatar-lg">{{ app.user.initials }}</div>
                <div>
                    <h1 class="mb-1">{{ app.user.prenom }} {{ app.user.nom }}</h1>
                    <p class="text-muted mb-2">Locataire depuis le {{ app.user.dateCreation|date('d/m/Y') }}</p>
                    <span class="status-badge">
                        <i class="bi bi-check-circle-fill"></i>
                        Compte actif
                    </span>
                </div>
            </div>
        </div>
    </div>

    {# Alerte info #}
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info d-flex align-items-start" role="alert">
                <i class="bi bi-info-circle-fill me-3 mt-1 flex-shrink-0"></i>
                <div>
                    <strong>Profil complet :</strong> Vos informations personnelles sont à jour et sécurisées.
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        {# Colonne principale #}
        <div class="col-lg-8">
            {# Informations personnelles #}
            <div class="profile-section mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="profile-section-title mb-4">
                            <i class="bi bi-person-circle me-2"></i>Informations personnelles
                        </h5>

                        <div class="info-row">
                            <span class="info-label">Nom complet</span>
                            <span class="info-value">{{ app.user.prenom }} {{ app.user.nom }}</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Adresse e-mail</span>
                            <span class="info-value">{{ app.user.email }}</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Rôle</span>
                            <span class="info-value">{{ app.user.role }}</span>
                        </div>

                        <div class="mt-4">
                            <button class="btn btn-primary btn-sm" disabled>
                                <i class="bi bi-pencil-square me-2"></i>Modifier mes informations
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            {# Informations du logement #}
            <div class="profile-section mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="profile-section-title mb-4">
                            <i class="bi bi-house-door me-2"></i>Informations du logement
                        </h5>
                        {# À intégrer selon votre modèle de données #}
                        <p class="text-muted">Les informations du logement seront disponibles prochainement.</p>
                    </div>
                </div>
            </div>

            {# Informations du bailleur #}
            <div class="profile-section mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="profile-section-title mb-4">
                            <i class="bi bi-briefcase me-2"></i>Informations du bailleur
                        </h5>
                        {# À intégrer selon votre modèle de données #}
                        <p class="text-muted">Les informations du bailleur seront disponibles prochainement.</p>
                    </div>
                </div>
            </div>
        </div>

        {# Colonne latérale #}
        <div class="col-lg-4">
            {# Statistiques rapides #}
            <div class="profile-section mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="profile-section-title mb-4">
                            <i class="bi bi-graph-up me-2"></i>Statistiques
                        </h5>

                        <div class="text-center mb-3">
                            <div class="display-6 text-primary">—</div>
                            <small class="text-muted">Taux de paiement à temps</small>
                        </div>

                        <hr>

                        <div>
                            <small class="text-muted">Données à intégrer</small>
                            <p class="text-muted">Les statistiques seront disponibles prochainement.</p>
                        </div>
                    </div>
                </div>
            </div>

            {# Activité récente #}
            <div class="profile-section mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="profile-section-title mb-4">
                            <i class="bi bi-clock-history me-2"></i>Activité récente
                        </h5>

                        <div class="small">
                            <div>
                                <div class="text-primary fw-bold">Connexion</div>
                                <small class="text-muted">Aujourd'hui</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Actions rapides #}
            <div class="profile-section mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="profile-section-title mb-4">
                            <i class="bi bi-lightning me-2"></i>Actions rapides
                        </h5>

                        <div class="d-grid gap-2">
                            <a href="{{ path('settings') }}" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-gear me-2"></i>Aller aux paramètres
                            </a>
                            <button class="btn btn-outline-danger btn-sm" disabled>
                                <i class="bi bi-exclamation-triangle me-2"></i>Signaler un problème
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}