{% extends 'base.html.twig' %}

{% block title %}Ajouter une consommation - HabitaGo{% endblock %}

{% block body %}
<style>
    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    @keyframes slideInDown {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .consumption-form-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 3rem 0;
        margin-bottom: 2.5rem;
        border-radius: 15px;
        box-shadow: 0 10px 40px rgba(102, 126, 234, 0.25);
        animation: fadeInUp 0.6s ease-out;
    }
    .consumption-form-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }
    .consumption-form-header p {
        font-size: 1.1rem;
        opacity: 0.95;
    }
    .form-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 40px rgba(102, 126, 234, 0.1);
        animation: fadeInUp 0.6s ease-out;
        background: white;
        position: relative;
    }
    .form-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #667eea, #764ba2);
    }
    .form-group {
        margin-bottom: 1.8rem;
    }
    .form-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 0.7rem;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .form-label i {
        color: #667eea;
        font-size: 1.1rem;
    }
    .form-control, .form-select {
        border: 2px solid #e0e7ff;
        border-radius: 10px;
        padding: 0.8rem 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
    }
    .form-control:focus, .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }
    .input-group {
        border-radius: 10px;
        overflow: hidden;
    }
    .input-group-text {
        background: linear-gradient(135deg, #f5f7fa 0%, #f0f3f7 100%);
        border: 2px solid #e0e7ff;
        color: #667eea;
        font-weight: 600;
        padding: 0.8rem 1rem;
    }
    .input-group .form-control {
        border-right: none;
    }
    .form-text {
        font-size: 0.85rem;
        color: #999;
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.3rem;
    }
    .alert-modern {
        border: none;
        border-radius: 12px;
        padding: 1.5rem;
        animation: slideInDown 0.6s ease-out;
        margin-bottom: 1.5rem;
        border-left: 4px solid #667eea;
    }
    .alert-info-modern {
        background: linear-gradient(135deg, #d1ecf1 0%, #e7f5f8 100%);
        color: #0c5460;
    }
    .form-buttons {
        display: flex;
        gap: 1rem;
        justify-content: space-between;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #e0e7ff;
    }
    .btn-modern {
        padding: 0.9rem 2rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
    }
    .btn-primary-modern {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }
    .btn-primary-modern:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        color: white;
    }
    .btn-secondary-modern {
        background: white;
        color: #667eea;
        border: 2px solid #667eea;
    }
    .btn-secondary-modern:hover {
        background: #f8f9ff;
        transform: translateY(-2px);
    }
    .form-info {
        background: linear-gradient(135deg, #f8f9ff 0%, #f0f3f7 100%);
        border-radius: 10px;
        padding: 1.5rem;
        margin-top: 2rem;
        border-left: 4px solid #667eea;
        animation: fadeInUp 0.8s ease-out;
    }
    .form-info strong {
        color: #333;
        display: block;
        margin-bottom: 0.5rem;
    }
    .form-info p {
        margin: 0;
        color: #667eea;
        font-weight: 500;
    }
</style>

<div class="container-fluid py-5">
    <div class="consumption-form-header px-4">
        <div class="row align-items-center">
            <div class="col-auto">
                <i class="bi bi-plus-circle" style="font-size: 3rem; opacity: 0.95;"></i>
            </div>
            <div class="col">
                <h1 class="mb-2">Ajouter un relevé de consommation</h1>
                <p class="mb-0">Saisissez vos relevés d'énergie et d'eau pour suivre votre consommation</p>
            </div>
        </div>
    </div>

    <div class="container-lg">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="form-card">
                    <div class="card-body p-4">
                        {# Affichage du formulaire #}
                        {{ form_start(form, { 'attr': { 'novalidate': 'novalidate', 'class': 'needs-validation' } }) }}

                        {# Type de consommation #}
                        <div class="form-group">
                            {{ form_label(form.type, 'Type de consommation', { 'label_attr': { 'class': 'form-label' } }) }}
                            {{ form_widget(form.type, { 'attr': { 'class': 'form-select' } }) }}
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i>
                                Sélectionnez le type de consommation que vous souhaitez enregistrer
                            </div>
                            {% if form.type.vars.errors %}
                                <div class="alert alert-danger mt-2 mb-0" style="border-radius: 8px;">
                                    {{ form_errors(form.type) }}
                                </div>
                            {% else %}
                                <div class="alert alert-success mt-2 mb-0" style="border-radius: 8px;">
                                    Aucune erreur
                                </div>
                            {% endif %}
                        </div>
                        
                        {# Valeur de consommation #}
                        <div class="form-group">
                            {{ form_label(form.valeur, 'Valeur consommée', { 'label_attr': { 'class': 'form-label' } }) }}
                            <div class="input-group">
                                {{ form_widget(form.valeur, { 'attr': { 'class': 'form-control', 'placeholder': '0.00' } }) }}
                                <span class="input-group-text" id="unite-suffix">
                                    <span id="unite-display">-</span>
                                </span>
                            </div>
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i>
                                L'unité sera ajustée automatiquement selon le type sélectionné
                            </div>
                            {% if form.valeur.vars.errors %}
                                <div class="alert alert-danger mt-2 mb-0 small" style="border-radius: 8px;">
                                    {{ form_errors(form.valeur) }}
                                </div>
                            {% else %}
                                <div class="alert alert-success mt-2 mb-0 small" style="border-radius: 8px;">
                                    Aucune erreur
                                </div>
                            {% endif %}
                        </div>

                        {# Période de consommation #}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.periodeDebut, 'Date de début', { 'label_attr': { 'class': 'form-label' } }) }}
                                    {{ form_widget(form.periodeDebut, { 'attr': { 'class': 'form-control' } }) }}
                                    {% if form.periodeDebut.vars.errors %}
                                        <div class="alert alert-danger mt-2 mb-0 small" style="border-radius: 8px;">
                                            {{ form_errors(form.periodeDebut) }}
                                        </div>
                                    {% else %}
                                        <div class="alert alert-success mt-2 mb-0 small" style="border-radius: 8px;">
                                            Aucune erreur
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.periodeFin, 'Date de fin', { 'label_attr': { 'class': 'form-label' } }) }}
                                    {{ form_widget(form.periodeFin, { 'attr': { 'class': 'form-control' } }) }}
                                    {% if form.periodeFin.vars.errors %}
                                        <div class="alert alert-danger mt-2 mb-0 small" style="border-radius: 8px;">
                                            {{ form_errors(form.periodeFin) }}
                                        </div>
                                    {% else %}
                                        <div class="alert alert-success mt-2 mb-0 small" style="border-radius: 8px;">
                                            Aucune erreur
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        {# Informations du logement #}
                        <div class="form-info">
                            <strong>
                                <i class="bi bi-house-door" style="margin-right: 0.5rem; color: #667eea;"></i>
                                Logement lié
                            </strong>
                            <p>{{ logement.adresse }}</p>
                            <p style="font-size: 0.9rem; opacity: 0.8;">{{ logement.codePostal }} {{ logement.ville }}</p>
                        </div>

                        {# Boutons d'action #}
                        <div class="form-buttons">
                            <a href="{{ path('consumption') }}" class="btn-modern btn-secondary-modern">
                                <i class="bi bi-arrow-left"></i>Retour
                            </a>
                            <button type="submit" class="btn-modern btn-primary-modern">
                                <i class="bi bi-check-circle"></i>Enregistrer la consommation
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{# Script pour mettre à jour dynamiquement l'unité affichée #}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const typeSelect = document.querySelector('#consommation_form_type');
        const uniteDisplay = document.querySelector('#unite-display');

        function updateUnite() {
            const selectedType = typeSelect.value;
            let unite = '-';

            if (selectedType === 'eau') {
                unite = 'm³';
            } else if (selectedType === 'electricite' || selectedType === 'gaz') {
                unite = 'kWh';
            }

            uniteDisplay.textContent = unite;
        }

        updateUnite();
        typeSelect.addEventListener('change', updateUnite);
    });
</script>

{% endblock %}
