{% extends "base.html.twig" %}

{% block title %}Mon Logement - HabitaGo{% endblock %}

{% block body %}
<style>
    /* Animations personnalis√©es */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes pulse {
        0%, 100% { box-shadow: 0 0 0 0 rgba(13, 110, 253, 0.4); }
        50% { box-shadow: 0 0 0 10px rgba(13, 110, 253, 0); }
    }

    @keyframes slideInRight {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    /* Styles globaux */
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 3rem 0;
        margin-bottom: 2rem;
        border-radius: 10px;
        color: white;
        animation: fadeInUp 0.6s ease-out;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.2);
    }

    .page-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }

    .page-header p {
        font-size: 1.1rem;
        opacity: 0.95;
        font-weight: 300;
    }

    /* Cartes am√©lior√©es */
    .card-modern {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        animation: fadeInUp 0.6s ease-out;
        background: white;
        position: relative;
    }

    .card-modern:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .card-modern::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #667eea, #764ba2);
    }

    /* Headers des cartes */
    .card-header-modern {
        background: linear-gradient(135deg, #f5f7fa 0%, #f0f3f7 100%);
        border: none;
        padding: 1.5rem;
        border-bottom: 1px solid #e0e7ff;
    }

    .card-header-modern h5,
    .card-header-modern h6 {
        color: #333;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .card-header-modern i {
        font-size: 1.3rem;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Corps des cartes */
    .card-body-modern {
        padding: 2rem;
    }

    /* √âl√©ments d'information */
    .info-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #f8f9ff 0%, #f0f3f7 100%);
        border-radius: 10px;
        transition: all 0.3s ease;
        border-left: 4px solid #667eea;
    }

    .info-item:hover {
        background: linear-gradient(135deg, #e8ebff 0%, #e0e3f7 100%);
        transform: translateX(5px);
    }

    .info-label {
        color: #667eea;
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-value {
        color: #333;
        font-weight: 600;
        font-size: 1.1rem;
    }

    /* Badges modernes */
    .badge-modern {
        padding: 0.6rem 1.2rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: inline-block;
        transition: all 0.3s ease;
    }

    .badge-modern:hover {
        transform: scale(1.05);
    }

    .badge-success-modern {
        background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(132, 250, 176, 0.3);
    }

    .badge-danger-modern {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(250, 112, 154, 0.3);
    }

    .badge-info-modern {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

    /* Section consommations */
    .consumption-card {
        background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
        border: 2px solid #e0e7ff;
        border-radius: 15px;
        padding: 1.5rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .consumption-card::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle, rgba(102, 126, 234, 0.1) 0%, transparent 70%);
        pointer-events: none;
    }

    .consumption-card:hover {
        transform: translateY(-5px);
        border-color: #667eea;
        box-shadow: 0 15px 40px rgba(102, 126, 234, 0.15);
    }

    .consumption-title {
        font-weight: 600;
        color: #333;
        font-size: 1.1rem;
    }

    .consumption-value {
        font-size: 1.8rem;
        font-weight: 700;
        color: #667eea;
        margin-top: 0.5rem;
    }

    .consumption-unit {
        font-size: 0.9rem;
        color: #999;
        font-weight: 500;
    }

    .consumption-period {
        font-size: 0.85rem;
        color: #999;
        margin-top: 0.8rem;
        font-style: italic;
    }

    /* Boutons modernes */
    .btn-modern {
        padding: 0.7rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-modern:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

    .btn-modern-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    /* Animations au d√©filement */
    .animate-on-scroll {
        animation: fadeInUp 0.8s ease-out;
    }

    /* Espacement */
    .section-spacing {
        margin-top: 3rem;
    }

    /* Ic√¥nes color√©es */
    .icon-electricity { color: #ffc107; }
    .icon-water { color: #17a2b8; }
    .icon-gas { color: #dc3545; }
</style>

<div class="container-fluid py-5">
    {# En-t√™te de la page avec d√©grad√© #}
    <div class="page-header px-4">
        <div class="row align-items-center">
            <div class="col-auto">
                <i class="bi bi-house-fill" style="font-size: 3.5rem; opacity: 0.95;"></i>
            </div>
            <div class="col">
                <h1 class="mb-2">Mon Logement</h1>
                <p class="mb-0">Consultez les informations de votre logement et ses contrats associ√©s</p>
            </div>
        </div>
    </div>

    {# Contenu principal #}
    <div class="container-lg">
        <div class="row g-4">

            {# BLOC 1 - Logement #}
            <div class="col-lg-6">
                <div class="card-modern">
                    <div class="card-header-modern">
                        <h6 class="mb-0">
                            <i class="bi bi-house-door"></i>
                            Logement
                        </h6>
                    </div>

                    <div class="card-body-modern">
                        {% if logement %}
                            <div class="info-item mb-3">
                                <div>
                                    <i class="bi bi-geo-alt me-2" style="color: #667eea; font-size: 1.3rem;"></i>
                                    <div>
                                        <div style="color: #667eea; font-weight: 600; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px;">Adresse</div>
                                        <div style="font-size: 1.1rem; font-weight: 600; color: #333; margin-top: 0.25rem;">{{ logement.adresse }}</div>
                                        <small style="color: #999;">{{ logement.codePostal }} ‚Äì {{ logement.ville }}</small>
                                    </div>
                                </div>
                            </div>

                            <div class="info-item">
                                <span class="info-label">Type de logement</span>
                                <span class="badge badge-modern badge-info-modern">
                                    {{ logement.typeLogement|capitalize }}
                                </span>
                            </div>

                            <div class="info-item">
                                <span class="info-label">Cr√©√© le</span>
                                <span class="info-value">
                                    {{ logement.dateCreation ? logement.dateCreation|date('d/m/Y') : '‚Äî' }}
                                </span>
                            </div>
                        {% else %}
                            <div class="text-center py-5" style="color: #999;">
                                <i class="bi bi-house-x" style="font-size: 3rem; display: block; margin-bottom: 1rem; opacity: 0.5;"></i>
                                <p class="mb-0">Aucun logement associ√©</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# BLOC 2 - Informations du contrat #}
            <div class="col-lg-6">
                <div class="card-modern">
                    <div class="card-header-modern">
                        <h6 class="mb-0">
                            <i class="bi bi-file-text"></i>
                            Contrat Actif
                        </h6>
                    </div>

                    <div class="card-body-modern">
                        {% if contrat %}
                            <div class="info-item">
                                <span class="info-label">üí∞ Loyer mensuel</span>
                                <span style="font-size: 1.6rem; font-weight: 700; color: #84fab0;">
                                    {{ contrat.montantLoyer|number_format(2, ',', ' ') }} ‚Ç¨
                                </span>
                            </div>

                            <div class="info-item">
                                <span class="info-label">üõ°Ô∏è Caution</span>
                                <span class="info-value">{{ contrat.montantCaution|number_format(2, ',', ' ') }} ‚Ç¨</span>
                            </div>

                            <div class="row mt-3 mb-3">
                                <div class="col-6">
                                    <div class="info-item">
                                        <div>
                                            <div class="info-label">üìÖ D√©but</div>
                                            <div class="info-value">{{ contrat.dateDebut|date('d/m/Y') }}</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-6">
                                    <div class="info-item">
                                        <div>
                                            <div class="info-label">üìÖ Fin</div>
                                            <div class="info-value">
                                                {% if contrat.dateFin %}
                                                    {{ contrat.dateFin|date('d/m/Y') }}
                                                {% else %}
                                                    <span class="badge badge-modern badge-success-modern">En cours</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="info-item">
                                <span class="info-label">Statut</span>
                                {% if contrat.statut == 'actif' %}
                                    <span class="badge badge-modern badge-success-modern">‚úì Actif</span>
                                {% elseif contrat.statut == 'r√©sili√©' %}
                                    <span class="badge badge-modern badge-danger-modern">‚úó R√©sili√©</span>
                                {% else %}
                                    <span class="badge badge-modern badge-info-modern">{{ contrat.statut|capitalize }}</span>
                                {% endif %}
                            </div>
                        {% else %}
                            <div class="alert alert-warning border-0" style="background: linear-gradient(135deg, #fff3cd 0%, #fffbea 100%); border-radius: 10px;">
                                <i class="bi bi-exclamation-triangle me-2" style="color: #ff9800; font-size: 1.3rem;"></i>
                                <strong>Aucun contrat actif trouv√©.</strong>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

        </div>

        {# BLOC 3 - R√©sum√© des consommations #}
        <div class="section-spacing">
            <div class="card-modern">
                <div class="card-header-modern">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-lightning-charge"></i>
                            Consommations R√©centes
                        </h5>
                        <a href="{{ path('consumption') }}" class="btn btn-modern btn-modern-primary">
                            Voir tous les d√©tails <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>

                <div class="card-body-modern">
                    {% if consommations|length > 0 %}
                        <div class="row g-3">
                            {% for consommation in consommations %}
                                <div class="col-md-6 col-lg-4">
                                    <div class="consumption-card">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h6 class="consumption-title">
                                                    {% if consommation.unite|lower == 'kwh' or consommation.unite|lower == 'kWh' %}
                                                        <i class="bi bi-lightning-charge icon-electricity me-2"></i>√âlectricit√©
                                                    {% elseif consommation.unite|lower == 'm3' %}
                                                        <i class="bi bi-droplet icon-water me-2"></i>Eau
                                                    {% elseif consommation.unite|lower == 'm3 gaz' or consommation.unite|lower == 'kwh gaz' %}
                                                        <i class="bi bi-fire icon-gas me-2"></i>Gaz
                                                    {% else %}
                                                        {{ consommation.unite }}
                                                    {% endif %}
                                                </h6>
                                                <div class="consumption-value">
                                                    {{ consommation.valeur|number_format(2, ',', ' ') }}
                                                    <span class="consumption-unit">{{ consommation.unite }}</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="consumption-period">
                                            üìÖ {{ consommation.periodeDebut|date('d/m') }} - {{ consommation.periodeFin|date('d/m/Y') }}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="alert alert-info border-0" style="background: linear-gradient(135deg, #d1ecf1 0%, #e7f5f8 100%); border-radius: 10px; color: #0c5460;">
                            <i class="bi bi-info-circle me-2" style="font-size: 1.3rem;"></i>
                            Aucune consommation enregistr√©e pour le moment.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

